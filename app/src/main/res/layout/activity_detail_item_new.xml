<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ArrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginTop="14dp"
        android:padding="6dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textAllCaps="false"
        android:textColor="#242424"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ArrowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ArrowBack" />

    <ImageView
        android:id="@+id/Heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:src="@drawable/icon_heart"
        android:layout_marginEnd="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/ArrowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ArrowBack" />

    <ImageView
        android:id="@+id/coffee2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/secondcoffee"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintDimensionRatio="327:202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/CoffeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Mocha"
        android:textAllCaps="false"
        android:textColor="#242424"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffee2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/IceHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Ice/Hot"
        android:textAllCaps="false"
        android:textColor="#A2A2A2"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/CoffeeName"
        app:layout_constraintTop_toBottomOf="@+id/CoffeeName" />

    <ImageView
        android:id="@+id/Rating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rating"
        android:layout_marginTop="14dp"
        app:tint="#FBBE21"
        app:layout_constraintStart_toStartOf="@+id/IceHot"
        app:layout_constraintTop_toBottomOf="@+id/IceHot" />

    <TextView
        android:id="@+id/NumberRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Rating"
        app:layout_constraintTop_toTopOf="@+id/Rating"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="0dp"
        android:text="(230)"
        android:textColor="#A2A2A2"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/NumberRating"
        app:layout_constraintStart_toEndOf="@+id/NumberRating"
        app:layout_constraintTop_toTopOf="@+id/Rating"/>

    <ImageView
        android:id="@+id/motorbikee"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:src="@drawable/motorbikee"
        app:layout_constraintBottom_toBottomOf="@+id/IceHot"
        app:layout_constraintEnd_toStartOf="@+id/beean"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/IceHot"
        android:background="@drawable/bg_icon"/>

    <ImageView
        android:id="@+id/beean"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:src="@drawable/beean"
        app:layout_constraintBottom_toBottomOf="@+id/motorbikee"
        app:layout_constraintEnd_toStartOf="@+id/pack"
        app:layout_constraintTop_toTopOf="@+id/motorbikee"
        android:layout_marginEnd="20dp"
        app:tint="#C67C4E"
        android:background="@drawable/bg_icon"/>

    <ImageView
        android:id="@+id/pack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:src="@drawable/pack"
        app:layout_constraintBottom_toBottomOf="@+id/motorbikee"
        app:layout_constraintEnd_toEndOf="@+id/coffee2"
        app:layout_constraintTop_toTopOf="@+id/motorbikee"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_icon"

        app:tint="#C67C4E" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E3E3E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rating"
        android:layout_marginTop="18dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAllCaps="false"
        android:textColor="#242424"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/DescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A cappuccino is an approximately 150 ml (5 oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo.. Read More"
        android:textAllCaps="false"
        android:textColor="#A2A2A2"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/coffee2"
        android:lineSpacingMultiplier="1.5"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/Description" />

    <TextView
        android:id="@+id/Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textColor="#242424"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionText"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/S"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_icon_size_s_l"
        android:text="S"
        android:textColor="#242424"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/M"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/Size" />

    <Button
        android:id="@+id/L"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:background="@drawable/bg_icon_size_s_l"
        android:text="L"
        android:textColor="#242424"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/S"
        app:layout_constraintEnd_toEndOf="@+id/coffee2"
        app:layout_constraintTop_toTopOf="@+id/S"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/M"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/M"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:background="@drawable/bg_icon_m"
        android:text="M"
        android:textColor="#C67C4E"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/S"
        app:layout_constraintEnd_toStartOf="@+id/L"
        app:layout_constraintStart_toEndOf="@+id/S"
        app:layout_constraintTop_toTopOf="@+id/S" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Price"
        android:textColor="#909090"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/S" />

    <TextView
        android:id="@+id/PriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 4.53"
        android:textColor="#C67C4E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/coffee2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/Buy"
        android:layout_width="217dp"
        android:layout_height="56dp"
        android:text="Buy Now"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        android:textStyle="bold"
        android:backgroundTint="#C67C4E"
        app:layout_constraintBottom_toBottomOf="@+id/PriceValue"
        app:layout_constraintEnd_toEndOf="@+id/coffee2"
        app:layout_constraintTop_toTopOf="@+id/textView4" />



</androidx.constraintlayout.widget.ConstraintLayout>